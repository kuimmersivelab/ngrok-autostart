[Unit]
Description=Autostart Script for Ngrok Tunnel Service
After=network.target

[Service]
ExecStart=/srv/sandbox/ngrok-autostart/sub1-startup.sh
ExecStartPost=/srv/sandbox/ngrok-autostart/sub1-post-startup.sh
Restart=always
RestartSec=6h
User=kuil
WorkingDirectory=/srv/sandbox/ngrok-autostart/
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

